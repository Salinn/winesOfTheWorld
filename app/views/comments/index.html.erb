<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Wine</th>
      <th>User</th>
      <th>See</th>
      <th>Smell</th>
      <th>Swirl</th>
      <th>Sip</th>
      <th>Swallow</th>
      <th>Savor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.wine_id %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.see %></td>
        <td><%= comment.smell %></td>
        <td><%= comment.swirl %></td>
        <td><%= comment.sip %></td>
        <td><%= comment.swallow %></td>
        <td><%= comment.savor %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
