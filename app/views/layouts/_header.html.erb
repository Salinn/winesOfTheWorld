<!-- Site header and navigation -->
<header class="top" role="header">
  <div class="container">
    <a href="/" class="navbar-brand pull-left">
      <img style="width: auto" height="150%" src="http://3.bp.blogspot.com/-2lFCgSlo-ck/T5KWu64r6uI/AAAAAAAAEgY/7VqeaMcOkwg/s1600/wine+glass.PNG">
      Wines of the World
    </a>
    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="glyphicon glyphicon-align-justify"></span>
    </button>
    <nav class="navbar-collapse collapse" role="navigation">
      <ul class="navbar-nav nav pull-right top-links">
        <% if current_user == nil %>
             <li><a class="top-links" href="#home">Home</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
        <li>
          <div class="form-inline" role="form" style="padding-bottom: 1rem; padding-top: .8rem;">
            <%= form_for(:user, :url => session_path(:user)) do |f| %>
              <div class="form-group">
                <%= f.text_field :login, :placeholder => "RIT DCE", :tabindex => 1, :class => "form-control" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, :placeholder => "Password", :tabindex => 2, :class => "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit 'Sign in', :tabindex => 3, :class => "form-control" %>
              </div>
            <% end %>
          </div>
        <% else %>
            <li><%= link_to "Wines", wines_path, class: "nav-item" %></li>
            <li><%= link_to "Weeks", weeks_path, class: "nav-item" %></li>
            <li><%= link_to "Sign-out", destroy_user_session_path, :method => :delete, class: "nav-item" %></li>
        <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>